# Application Settings
DEBUG=false
LOG_LEVEL=info
HOST=127.0.0.1
PORT=8000
ENVIRONMENT=development
ALLOWED_HOSTS=localhost,lucasblanco.com
SITE_URL=https://lucasblanco.com/ed/arh1000/fulltext

# Security Settings - CHANGE THESE IN PRODUCTION
# Generate a strong secret key: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=replace_with_secure_random_string
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60
JWT_SECRET=replace_with_strong_jwt_secret
CORS_ORIGINS=http://localhost:3000,https://lucasblanco.com

# Database Settings
DATABASE_URL=postgresql://username:password@localhost:5432/art_education_db
VECTOR_DB_PATH=./assets/data/vector_store
CACHE_DIR=./assets/data/cache

# File Storage
UPLOAD_DIR=uploads
OUTPUT_DIR=output
TEMP_DIR=temp

# Canvas LMS Integration
CANVAS_API_URL=https://your-institution.instructure.com/api/v1
CANVAS_API_KEY=your_canvas_api_key_here
CANVAS_LTI_CLIENT_ID=your_lti_client_id_here
CANVAS_LTI_DEPLOYMENT_ID=your_lti_deployment_id_here
CANVAS_LTI_ISSUER=your_lti_issuer_here

# OCR Settings
OCR_LANGUAGE=eng
OCR_DPI=300
OCR_THREADS=4

# AI Model Settings
# Fast Agent
MODEL_PATH=./assets/data/models/ggml-model-q4_0.bin
MODEL_TYPE=llama
CONTEXT_SIZE=4096
MAX_TOKENS=1024
TEMPERATURE=0.7

# Local LLM configuration
LLM_EMBEDDING_MODEL=all-MiniLM-L6-v2
LLM_GENERATION_MODEL=TinyLlama/TinyLlama-1.1B-Chat-v1.0
LLM_DEVICE=cuda  # or cpu if no GPU available
EMBEDDING_MODEL=all-MiniLM-L6-v2
VECTOR_SIMILARITY_TOP_K=5

# Pinecone configuration
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=art-education-vectors

# Hugging Face configuration
HUGGINGFACE_TOKEN=your_huggingface_token_here  # Optional, for private models

# Metrics and Monitoring (optional)
ENABLE_METRICS=false
PROMETHEUS_PORT=9090
